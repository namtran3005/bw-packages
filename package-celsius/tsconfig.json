{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["es2018", "DOM"],
    "types": ["node", "jest", "mongodb"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["node_modules/@types/*"]
    },
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
